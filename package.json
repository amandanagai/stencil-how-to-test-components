{
  "name": "stencil-how-to-test-components",
  "version": "1.0.0",
  "description": "stencil how to test components",
  "main": "dist/stencil-app.js",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "npm run clean && stencil build --prerender",
    "clean": "rimraf dist",
    "copy:static": "cp -r ./static/ ./dist",
    "deploy": "gh-pages -d dist",
    "dev": "sd concurrent \"stencil build --dev --watch\" \"stencil-dev-server\"",
    "lint": "sd concurrent \"npm run lint:ts\" \"npm run lint:styles\"",
    "lint:styles": "stylelint \"src/**/*.scss\"",
    "lint:ts": "tslint -p tsconfig.json -c tslint.json",
    "serve": "stencil-dev-server",
    "serve:prod": "npm run build && npm run copy:static && serve ./dist",
    "start": "npm run dev",
    "test": "jest --no-cache",
    "test:watch": "jest --watch --no-cache"
  },
  "author": "Jag Reehal",
  "license": "ISC",
  "dependencies": {
    "@stencil/core": "0.6.13"
  },
  "devDependencies": {
    "@stencil/dev-server": "^0.0.18",
    "@stencil/postcss": "0.0.3",
    "@stencil/sass": "0.0.3",
    "@stencil/utils": "^0.0.4",
    "@types/jest": "^22.1.3",
    "autoprefixer": "^8.0.0",
    "cssnano": "^3.10.0",
    "gh-pages": "1.1.0",
    "jest": "^22.4.2",
    "postcss-reporter": "5.0.0",
    "prettier": "^1.11.0",
    "rimraf": "^2.6.2",
    "stylelint": "^9.1.1",
    "stylelint-config-standard": "^18.1.0",
    "stylelint-scss": "^2.4.0",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "5.7.0",
    "tslint-config-prettier": "^1.9.0"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  }
}